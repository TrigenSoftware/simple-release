{
  "root": true,
  "extends": [
    "@trigen/eslint-config",
    "@trigen/eslint-config/tsm",
    "@trigen/eslint-config/esm",
    "@trigen/eslint-config/jest"
  ],
  "env": {
    "node": true
  },
  "ignorePatterns": [
    "packages/*/dist/**/*",
    "packages/*/package/**/*"
  ],
  "rules": {
    "@typescript-eslint/consistent-type-imports": "error"
  }
}
