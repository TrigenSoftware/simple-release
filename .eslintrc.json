{
  "root": true,
  "extends": [
    "@trigen/eslint-config",
    "@trigen/eslint-config/tsm",
    "@trigen/eslint-config/esm",
    "@trigen/eslint-config/jest"
  ],
  "env": {
    "node": true
  },
  "rules": {
    "no-console": "off",
    "no-template-curly-in-string": "off",
    "import/dynamic-import-chunkname": "off"
  },
  "ignorePatterns": [
    "packages/*/dist/**/*"
  ]
}
